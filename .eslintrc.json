{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "es6": true
  },
  "overrides": [{
    "files": ["**/tests/**"],
    "env": {
      "jest": true
    }
  }],
  "rules": {
    "import/no-unresolved": [2, { "commonjs": true }]
  }
}
